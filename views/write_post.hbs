<main class="container" style="margin-top: 71px;">
    <div class="row">
        <div class="card" style="margin: auto; width: 900px">
            <div class="card-body">
                <h5 class="card-title">Viết bài</h5>
                <form id="writePostForm">
                    <div class="mb-3 row mt-1">
                        <label for="inputPostTitle" class="col-4 col-form-label right__content__label">Tiêu đề </label>
                        <div class="col-8 mt-1">
                            <input type="text" class="form-control rounded-1" id="inputPostTitle" name="post_title">
                        </div>
                    </div>

                    <div class="mb-3 row mt-1">
                        <label for="inputTags" class="col-4 col-form-label right__content__label">Gắn nhãn:
                            (<i>Gắn nhãn giúp bài viết dễ dàng được tìm kiếm</i>)
                        </label>
                        <div class="col-8 mt-1">
                            <div class=" tags_wrapper">
                                <input class="form-control inputTags" name="post_tags" id="inputTag"
                                    placeholder="Ví dụ: C#, AI, " oninput="onSearchTag()">
                                <ul id="tag_suggests">
                                    <li class="tag_suggests__item">
                                        <label class="float-end clickToAddLabel">Chọn </label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 row mt-1">
                        <label for="">Nội dung</label>
                        <div class="col-12 mt-1">
                            <div id="editor_1" class="" style="height: 100vh;">

                            </div>
                        </div>
                    </div>


            </div>

        </div>
</main>
<script src="/javascripts/write_post.js"></script>