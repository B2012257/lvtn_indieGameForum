<link rel="stylesheet" href="/stylesheets/login.css">
<div class="container">
    <div class="row justify-content-center w-100">
        <div class="col-md-offset-2 col-md-8">
            <div class="form-container">
                <div class="left-content">
                    <h3 class="title">IndieGameVN</h3>
                    <image src="/images/ghost.svg" width="100" class="ghost-icon"></image>
                    <h4 class="sub-title">Cộng đồng game Indie <br /> Việt Nam</h4>
                </div>
                <div class="right-content">
                    <h3 class="form-title">Đăng ký tài khoản</h3>

                    <form class="form-horizontal" action="/auth/user/register" method="post">
                        {{#if msg}}
                        <p class="text-danger">{{msg}}</p>
                        {{/if}}
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" class="form-control" name="username" required minlength="5">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" name="password" required minlength="6">
                        </div>
                        <div class="form-group">
                            <label>Xác nhận mật khẩu</label>
                            <input type="password" class="form-control" name="re-type-password" required minlength="6">
                        </div>
                        <button class="btn signin" type="submit">Đăng ký</button>

                    </form>
                    <!--                    <span class="separator">OR</span>-->
                    <!--                    <ul class="social-links">-->
                    <!--                        <li>-->
                    <!--                            <a href="/oauth2/login/federated/google" class="text-decoration-none">-->
                    <!--                                <i class="fab fa-google"></i>-->
                    <!--                                Đăng nhập với google-->
                    <!--                            </a>-->
                    <!--                        </li>-->

                    <!--                    </ul>-->
                    <span class="signup-link">Bạn đã có tài khoản ? Đăng nhập <a href="/login">ngay</a></span>
                </div>
            </div>
        </div>
    </div>
</div>