<link rel="stylesheet" href="/stylesheets/project_view.css">
<link rel="stylesheet" href="/stylesheets/photoswipe.css">

<div class="heading" style="margin-top: 72px; padding-bottom: 10px">
    {{!-- <div class="change_theme">
        <div class="change_background_btn">
            <i class="fa-solid fa-palette"></i>
            <div class="chooseColor">
                Chọn màu nền: <input type="color" name="" id="">
            </div>
        </div>

    </div> --}}

    <div class="banner" title="Click to upload banner">
        <img src="https://m.gjcdn.net/game-header/1400/435648-cp4ec7zu-v4.webp" alt="">
    </div>
    <div class="heading_content">
        <div class="heading_content__title container d-flex justify-content-between">
            <div class="heading_content__title__left">
                <ul class="title__left__list">
                    <li class="title__left__list__item__banner title__left__list__item">
                        <div class="project_name">{{projectInfo.name}}
                            <i style="font-size: 12px;">by @{{projectInfo.user.name}}</i>
                        </div>

                        {{#each projectInfo.images}}
                        {{#if this.isCoverImage}}
                        <img class="title__left__list__item__banner_small" src="{{this.url}}" alt="" width="300"
                            height="170">

                        {{/if}}
                        {{/each}}

                    </li>
                    <li class="title__left__list__item">
                        <a href="#" class="active pt-2 pb-2 text-decoration-none text-black">Tổng quan</a>
                    </li>
                    <li class="title__left__list__item">
                        <a href="/project/{{projectInfo.slug}}/rating"
                            class="pt-2 pb-2 text-decoration-none text-black text-primary">Đánh giá</a>
                    </li>
                </ul>
            </div>
            <div class="heading_content__title__right">
                {{#if user}}
                {{#if payment_info}}
                <a href="" class="btn-action-project btn btn-success buy_btn me-1 disabled">

                    Đã sở hữu</a>
                <a href="/user/libary" class="btn-action-project btn btn-outline-secondary buy_btn">

                    Vào thư viện</a>
                {{else}}
                <a href="/project/{{projectInfo.id}}/pay" class="btn-action-project btn btn-outline-success buy_btn 
                                                {{#unless (ifEquals projectInfo.releaseStatus " Đã phát hành") }}
                    disabled {{/unless}} {{!-- Kiểm tra nếu chưa phát hành thì cũng không được mua --}} {{#if (ifEquals
                    user.id projectInfo.user.id) }} disabled{{/if}} {{#unless projectInfo.versions}}
                    disabled{{/unless}}" {{!-- Kiểm tra nếu là tác giả thì không được mua --}}{{#unless
                    projectInfo.versions}} title="Phiên bản tải xuống chưa có sẳn" {{/unless}}>
                    <i class=" fa-regular fa-credit-card me-2"></i>

                    {{!-- Nếu game miễn phí thì là chữ tải xuống, ngược lại thì chữ Mua --}}
                    {{#if (ifEquals projectInfo.price "0")}}
                    Tải xuống
                    {{else}}
                    Mua
                    {{/if}}
                </a>
                <form class="btn-action-project btn btn-outline-primary follow_btn" {{#if isFollowing}}
                    action="/user/project/{{projectInfo.id}}/unfollow" {{else}}
                    action="/user/project/{{projectInfo.id}}/follow" {{/if}} method="POST">
                    {{#if isFollowing}}
                    <button type="submit" class="border-0 bg-transparent btn btn-outline-primary ">
                        <i class="fa-solid fa-minus fa-bounce me-2"></i>
                        Bỏ theo dõi
                    </button>
                    {{else}}
                    <button type="submit" class="border-0 bg-transparent btn btn-outline-primary ">
                        <i class="fa-solid fa-plus fa-bounce me-2"></i>
                        Theo dõi
                    </button>
                    {{/if}}
                </form>

                <button class="btn-action-project btn btn-outline-danger">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                    Báo xấu
                </button>
                {{#if (ifEquals user.id projectInfo.user.id)}}
                <a title="Điều chỉnh" href="/user/project/{{projectInfo.id}}/edit" class="btn btn-outline-info">
                    <i class="fa-solid fa-palette"></i>
                </a>
                {{/if}}


                {{/if}}



                {{else}}
                {{!-- Nếu chưa đăng nhập thì chỉ được xem --}}
                <a title="Vui lòng đăng nhập" class="btn-action-project btn btn-outline-success buy_btn disabled">
                    <i class=" fa-regular fa-credit-card me-2"></i>
                    Mua</a>
                <button title="Vui lòng đăng nhập" class="btn-action-project btn btn-outline-primary follow_btn"
                    disabled>
                    <i class="fa-solid fa-plus fa-bounce me-2 disabled"></i>
                    Theo dõi</button>
                <button title="Vui lòng đăng nhập" class="btn-action-project btn btn-outline-danger" disabled>
                    <i class="fa-regular fa-heart"></i>
                </button>


                {{/if}}



            </div>

        </div>
        <div class="carousel container p-0 mt-4">

            <ul class="carousel__thumbnails gap-2 pb-2 gallery">
                {{#if projectInfo.images}}
                {{#each projectInfo.images}}
                {{#unless this.isCoverImage}}
                {{#unless this.isCoverImageLarge}}

                <a href="{{url}}" data-pswp-width="300" data-pswp-height="180">
                    <img src="{{this.url}}" alt="" style="max-height: 180px"></label>
                </a>
                {{/unless}}

                {{/unless}}

                {{/each}}
                {{/if}}
            </ul>
        </div>
    </div>
</div>
<main class="container">
    <div class="row">
        <div class="col-8 pt-4">
            <h5 class="d-inline-block">Mô tả dự án
            </h5>
            {{#with projectInfo}}

            <div id="project_id" class="d-none">{{this.id}}
            </div>
            <p id="project_long_description" class="d-none">
                {{long_description}}
            </p>
            <div id="editor" class="mt">
            </div>
            {{/with}}

        </div>
        <div class="col-4 pt-4">
            <h5 class="d-inline-block">Thông tin dự án
            </h5>
            {{!-- <a class="text-decoration-none float-end" href="#">Điều chỉnh</a> --}}

            {{#with projectInfo}}
            <ul class="list-group">
                <li class="list-group-item">Phân loại: <a class="text-decoration-none"
                        href="/project/{{classification.slug}}" href="">{{classification.name}}.</a>
                </li>
                <li class="list-group-item">Thể loại:
                    <a href="/genres/{{genre.slug}}" class="text-decoration-none" href="">{{genre.name}}.</a>
                </li>
                <li class="list-group-item">Nhãn:
                    {{#each tags}}
                    <a href="/tags/{{slug}}" class="text-decoration-none" href="">{{this.name}},</a>
                    {{/each}}
                </li>


                <li class="list-group-item">Giá:

                    <span class="text-success">{{vndFormat price}}</span>
                </li>
                {{#if versions}}
                <li class="list-group-item">Trạng thái phát hành:
                    {{#if (ifEquals releaseStatus " Đã phát hành") }}
                    <span class="text-success">{{releaseStatus}}.</span>
                    {{else}}
                    <span class="text-warning">{{releaseStatus}}.</span>

                    {{/if}}
                </li>
                {{#each versions}}

                <li class="list-group-item">Phiên bản hiện tại: {{this.version_number}}.</li>
                <li class="list-group-item">Ngày phát hành phiên bản: {{momentDay this.release_Date}}.</li>
                <li class="list-group-item">Nền tảng hổ trợ: {{#each this.downloads}}
                    {{this.platform}},
                    {{/each}}
                </li>

                {{/each}}
                {{else}}
                <li class="list-group-item text-danger">Phiên bản tải xuống chưa có sẳn</li>
                {{/if}}
                <li class="list-group-item">Nhà phát triển: {{user.name}}.</li>

                <li class="list-group-item">Ngày chỉnh sửa:
                    {{momentTime updatedAt}}.
                <li class="list-group-item">Ngày đăng:
                    {{momentTime createdAt}}.</li>


                <li class="list-group-item">Trạng thái hiển thị:

                    {{#if isPublic}}
                    <span class="text-success">Công khai.</span>
                    {{else}}
                    <span class="text-danger">Riêng tư.</span>
                    {{/if}}

                </li>
            </ul>
            {{/with}}
        </div>
    </div>
</main>
<script src="https://cdn.ckeditor.com/ckeditor5/41.2.0/super-build/ckeditor.js"></script>


<script src="/javascripts/project_view.js"></script>
<script src="/javascripts/photoswipe.umd.min.js"></script>
<script src="/javascripts/photoswipe-lightbox.umd.min.js"></script>
<script type="text/javascript">
    let lightbox = new PhotoSwipeLightbox({
        gallery: '.gallery',
        children: 'a',
        // dynamic import is not supported in UMD versionmouseMovePan: true,

        secondaryZoomLevel: 2,
        maxZoomLevel: 1,
        pswpModule: PhotoSwipe
    });
    lightbox.init();
</script>