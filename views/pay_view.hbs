<main style="margin-top: 71px;">
    <h1>Payment</h1>
    {{!-- Display game information --}}
    <div>
        <h2>Game Information</h2>
        <p>Title: {{projectInfo.name}}</p>
        <p>Genre: {{projectInfo.genre.name}}</p>
        <p>Price: {{projectInfo.price}} VND</p>
    </div>
    <label for="email">Email:</label>
    <input type="email address" id="email" name="email" required>
    <form action="/user/payment/paypal/pay" method="POST">

        <br>
        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" required>
        <br>
        <button type="submit">Pay Now</button>
    </form>
</main>