                                <a href="/project/all" class="view_all__btn ms-2">Xem tất cả</a>

                            </div>
                            <div class="mt-2 w-100 d-flex gap-4 flex-wrap justify-content-start">

                                {{#each projectInfo}}
                                <div class="card project-item"
                                    style="flex-basis: 260px;flex-shrink: 0;flex-grow: 0; border-radius: 0">
                                    {{#each images}}
                                    {{#if this.isCoverImage}}
                                    <img src="{{this.url}}" class="game__thumbnail" width="100%" height="100%">
                                    {{/if}}
                                    {{/each}}
                                    {{!-- <img src="{{this.image}}" class="game__thumbnail" width="100%"> --}}
                                    <span class="badge badge-primary sale">Mới</span>
                                    <div class="card-body">

                                        <a href="/project/{{this.slug}}/view" class="card-title fs-5">{{this.name}}</a>
                                        <div class="tags" style="min-height: 20px;">
                                            {{#each this.tags}}

                                            <a href="/tags/{{this.slug}}" class="badge bg-secondary">{{this.name}}</a>
                                            {{/each}}
                                        </div>
                                        <p class="mt-2 card-text clamped-text-3">{{this.short_description}}</p>
                                        {{#if (ifEquals this.price '0')}}
                                        <p>Miễn phí</p>
                                        {{else}}
                                        <p>Giá: {{vndFormat this.price}}</p>
                                        {{/if}}
                                    </div>
                                </div>
                                {{/each}}


                            </div>
                        </div>


