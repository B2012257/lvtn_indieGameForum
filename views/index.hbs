        <div class="col-10 p-0 right__content">
            <div id="" class="col-12" data-bs-ride="carousel">
                <main>
                    <section>
                        <div id="carouselExampleCaptions" class="carousel slide" data-interval="false">
                            <div class="carousel-indicators mb-1">
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0"
                                    class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                                    aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"
                                    aria-label="Slide 4"></button>
                                {{!-- <button type="button" data-bs-target="#carouselExampleCaptions"
                                    data-bs-slide-to="3" aria-label="Slide 4"></button> --}}
                            </div>

                            <div class="carousel-inner"><!--The Carousel Container-->
                                {{#each hotProject}}
                                {{#if @first}}
                                <div class="carousel-item active"><!--The Carousel Slider-->
                                    <a href="/project/{{this.slug}}/view" class="card item text-bg-dark">
                                        <div class="left">
                                            {{#each this.images}}
                                            {{#if this.isCoverImage}}
                                            <img src="{{this.url}}" alt="">
                                            {{/if}}
                                            {{/each}}
                                        </div>
                                        <div class="right d-flex flex-column">
                                            <div class="row">
                                                <h4 class="p">{{this.name}}</h4>
                                                <small style="font-size: 12px;" class="p">
                                                    <i>By {{this.user.name}}</i>
                                                </small>
                                                <small style="font-size: 12px;" class="p">
                                                    <i class="text-danger">{{this.price}} Vnđ </i>
                                                </small>
                                            </div>
                                            <div class="row">
                                                {{#each this.images}}
                                                {{#unless this.isCoverImage}}
                                                <img src="{{this.url}}" alt="">

                                                {{/unless}}
                                                {{/each}}
                                            </div>
                                        </div>
                                        {{!-- <h2 class="name">Tim Spence</h2>
                                        <p class="role">Head of Marketing</p>
                                        <p class="work-at">Markson Inc</p> --}}

                                    </a>
                                </div>
                                {{else}}
                                <div class="carousel-item "><!--The Carousel Slider-->
                                    <a href="/project/{{this.slug}}/view" class="card item text-bg-dark">
                                        <div class="left">
                                            {{#each this.images}}
                                            {{#if this.isCoverImage}}
                                            <img src="{{this.url}}" alt="">
                                            {{/if}}
                                            {{/each}}
                                        </div>
                                        <div class="right d-flex flex-column">
                                            <div class="row">
                                                <h4 class="p">{{this.name}}</h4>
                                                <small style="font-size: 12px;" class="p">
                                                    <i>By {{this.user.name}}</i>
                                                </small>
                                                <small style="font-size: 12px;" class="p">
                                                    <i class="text-danger">{{this.price}} Vnđ </i>
                                                </small>
                                            </div>
                                            <div class="row">
                                                {{#each this.images}}
                                                {{#unless this.isCoverImage}}
                                                <img src="{{this.url}}" alt="">

                                                {{/unless}}
                                                {{/each}}
                                            </div>
                                        </div>
                                        {{!-- <h2 class="name">Tim Spence</h2>
                                        <p class="role">Head of Marketing</p>
                                        <p class="work-at">Markson Inc</p> --}}

                                    </a>
                                </div>
                                {{/if}}


                                {{/each}}
                                <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button"
                                    data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
